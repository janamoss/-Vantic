<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuyTicketVanActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/vantic"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/ic_back"/>

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
    <TextView
        android:id="@+id/title_book"
        android:fontFamily="@font/kanit_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="จองตั๋วรถตู้"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/describe"
        android:fontFamily="@font/kanit_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ค้นหาตั๋วรถตู้ที่ใช่สำหรับคุณ"
        android:layout_below="@id/title_book"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/from"
        android:fontFamily="@font/kanit_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="จาก"
        android:layout_below="@id/describe"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <com.google.android.material.textfield.TextInputLayout
        android:fontFamily="@font/kanit_light"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="จังหวัด"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_below="@id/from"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">
        <AutoCompleteTextView
            android:id="@+id/selectedFrom"
            android:fontFamily="@font/kanit_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/to"
        android:fontFamily="@font/kanit_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from"
        android:text="ถึง"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <com.google.android.material.textfield.TextInputLayout
        android:fontFamily="@font/kanit_light"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="จังหวัด"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_below="@id/to"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">
        <AutoCompleteTextView
            android:id="@+id/selectedTo"
            android:fontFamily="@font/kanit_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/txt_choose"
        android:fontFamily="@font/kanit_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เลือกวันที่"
        android:layout_below="@id/to"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_date"
        android:fontFamily="@font/kanit_light"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="15sp"
        android:text="ดด / วว / ปป"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_choose"
        android:background="@drawable/border"
        android:drawableRight="@drawable/calendars"
        android:paddingHorizontal="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dateselect"
        android:fontFamily="@font/kanit_light"
        android:layout_width="95dp"
        android:layout_height="25dp"
        android:layout_below="@id/txt_date"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="Select Date"
        android:textAllCaps="false"
        android:backgroundTint="#6EC6F3"
        android:background="@drawable/btn_oval"
        android:textColor="@color/white"
        android:onClick="showDatePickerDialog"/>
    <TextView
        android:id="@+id/txt_amount"
        android:fontFamily="@font/kanit_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="จำนวนที่นั่งที่จอง"
        android:layout_below="@id/to"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="220dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/selectedAmt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_below="@id/txt_amount"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_toRightOf="@id/txt_date"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">
        <AutoCompleteTextView
            android:id="@+id/dropdown_seat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="เลือกที่นั่ง"
            android:inputType="none"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search"
        android:fontFamily="@font/kanit_light"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="#6EC6F3"
        android:text="ค้นหาเที่ยวรถ"
        android:onClick="searchTicket"
        android:background="@drawable/buttom_or_input"
        android:layout_below="@id/txt_amount"
        android:layout_marginTop="150dp"
        android:textAllCaps="false"
        android:textSize="20sp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomnavigation"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"/>
</RelativeLayout>