<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.EditVanActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/vantic"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/ic_back"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="แก้ไขข้อมูลรถตู้"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/kanit_light"/>
    <TextView
        android:id="@+id/txtVan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:text="รถตู้คันที่"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/kanit_light"
        />
    <TextView
        android:id="@+id/txtVannum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:text="เลขทะเบียน"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/kanit_light"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คนขับ"
        android:textSize="20sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/kanit_light"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="ชื่อ-นามสกุล"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kanit_light">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:textSize="20sp"
            android:background="@drawable/round_info"/>
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Done1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:backgroundTint="#7DDD87"
            android:onClick="Done"
            android:padding="10dp"
            android:text="เสร็จสิ้น"
            android:textAllCaps="false"
            android:textSize="20sp"
            tools:ignore="OnClick"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/kanit_light"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reset1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ยกเลิก"
            android:backgroundTint="#EE5F5F"
            android:background="@drawable/round_btn"
            android:layout_toRightOf="@id/btn_Done1"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:onClick="reset"
            android:fontFamily="@font/kanit_light"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomnavigation"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menuadmin"/>
    </RelativeLayout>
</LinearLayout>