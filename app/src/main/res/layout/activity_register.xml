<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ลงทะเบียน"
        android:textSize="45sp"
        android:textColor="@color/black"
        android:fontFamily="@font/kanti"
        android:textFontWeight="700"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputFName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/vanticInput"
        android:hint="ชื่อ"
        android:layout_centerInParent="true"
        android:layout_below="@id/txtRegister"
        android:layout_marginTop="40dp"
        app:boxCornerRadiusBottomEnd="31.5dp"
        app:boxCornerRadiusBottomStart="31.5dp"
        app:boxCornerRadiusTopEnd="31.5dp"
        app:boxCornerRadiusTopStart="31.5dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#F5F4F2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFName"
            android:fontFamily="@font/kanti"
            android:textFontWeight="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/vanticInput"
        android:hint="นามสกุล"
        android:layout_centerInParent="true"
        android:layout_below="@id/inputFName"
        android:layout_marginTop="20dp"
        app:boxCornerRadiusBottomEnd="31.5dp"
        app:boxCornerRadiusBottomStart="31.5dp"
        app:boxCornerRadiusTopEnd="31.5dp"
        app:boxCornerRadiusTopStart="31.5dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#F5F4F2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtLName"
            android:fontFamily="@font/kanti"
            android:textFontWeight="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/vanticInput"
        android:hint="อีเมล"
        android:layout_centerInParent="true"
        android:layout_below="@id/inputLName"
        android:layout_marginTop="20dp"
        app:boxCornerRadiusBottomEnd="31.5dp"
        app:boxCornerRadiusBottomStart="31.5dp"
        app:boxCornerRadiusTopEnd="31.5dp"
        app:boxCornerRadiusTopStart="31.5dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#F5F4F2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtEmail"
            android:fontFamily="@font/kanti"
            android:textFontWeight="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputNumber"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/vanticInput"
        android:hint="เบอร์มือถือ"
        android:layout_centerInParent="true"
        android:layout_below="@id/inputEmail"
        android:layout_marginTop="20dp"
        app:boxCornerRadiusBottomEnd="31.5dp"
        app:boxCornerRadiusBottomStart="31.5dp"
        app:boxCornerRadiusTopEnd="31.5dp"
        app:boxCornerRadiusTopStart="31.5dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#F5F4F2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNumber"
            android:fontFamily="@font/kanti"
            android:textFontWeight="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/vanticInput"
        android:hint="รหัสผ่าน"
        android:layout_centerInParent="true"
        android:layout_below="@id/inputNumber"
        android:layout_marginTop="20dp"
        app:boxCornerRadiusBottomEnd="31.5dp"
        app:boxCornerRadiusBottomStart="31.5dp"
        app:boxCornerRadiusTopEnd="31.5dp"
        app:boxCornerRadiusTopStart="31.5dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#F5F4F2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"
            android:fontFamily="@font/kanti"
            android:textFontWeight="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPasswordA"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/vanticInput"
        android:hint="ยืนยันรหัสผ่าน"
        android:layout_centerInParent="true"
        android:layout_below="@id/inputPassword"
        android:layout_marginTop="20dp"
        app:boxCornerRadiusBottomEnd="31.5dp"
        app:boxCornerRadiusBottomStart="31.5dp"
        app:boxCornerRadiusTopEnd="31.5dp"
        app:boxCornerRadiusTopStart="31.5dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#F5F4F2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPasswordA"
            android:fontFamily="@font/kanti"
            android:textFontWeight="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmitRegister"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanti"
        android:textFontWeight="700"
        android:textColor="@color/white"
        android:backgroundTint="#3AB4F2"
        android:background="@drawable/buttom_main"
        android:text="สมัครสมาชิก"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_below="@id/inputPasswordA"/>
    </RelativeLayout>
</ScrollView>